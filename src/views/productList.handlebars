<script>
  function addProduct(id) {
    let cartId = prompt('Ingrese ID del carrito:');
    fetch(`/api/carts/${cartId}/products/${id}`, {
      method: "POST"
    }).then(() => {
      window.location.href = '/products';
    }).catch((error) => {
      console.error('Error al agregar el producto al carrito:', error);
    });
  }
</script>

<h1>Lista de Productos</h1>
<table>
  <thead>
    <tr>
      <th>Título</th>
      <th>Descripción</th>
      <th>Precio</th>
      <th>Categoría</th>
    </tr>
  </thead>
  <tbody>
    {{#each productsResult.products}}
    <tr>
      <td>{{this.title}}</td>
      <td>{{this.description}}</td>
      <td>{{this.price}}</td>
      <td>{{this.category}}</td>
      <td><a href="/products/{{this._id}}">Ver Detalles</a></td>
      <td>
        <button onclick="addProduct('{{this._id}}')">Agregar al Carrito</button>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
  <div>
    {{#if productsResult.hasPrevPage}}
      <a href="{{productsResult.prevLink}}">Anterior</a>
    {{/if}}
    |
    {{#if productsResult.hasNextPage}}
      <a href="{{productsResult.nextLink}}">Siguiente</a>
    {{/if}}
  </div>